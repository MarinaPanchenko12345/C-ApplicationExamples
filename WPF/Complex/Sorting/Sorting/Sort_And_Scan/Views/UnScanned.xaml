<UserControl x:Class="Sort_And_Scan.Views.UnScanned"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sort_And_Scan.Views"
             mc:Ignorable="d" 
             d:DesignHeight="860" d:DesignWidth="{Binding Source={x:Static SystemParameters.PrimaryScreenWidth}}">
    <UserControl.Resources>
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
        <Style TargetType="DataGridCell">
            <Setter Property="TextBlock.TextAlignment" Value="Center" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <StackPanel VerticalAlignment="Top" Orientation="Vertical">
            <DataGrid x:Name="Grid1" Margin="0,50,0,0" AutoGenerateColumns="False" RowHeight="30" Height="700" Width="1600"  CanUserAddRows="False" SelectionUnit="Cell" CanUserReorderColumns="False" FontSize="20" VirtualizingPanel.IsVirtualizing="True" HorizontalGridLinesBrush="Black" VerticalGridLinesBrush="Black" GridLinesVisibility="All" Background="{x:Null}" Foreground="Black" BorderThickness="1" BorderBrush="Black" VirtualizingPanel.IsVirtualizingWhenGrouping="True">
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="{Binding RowColor}"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="HorizontalAlignment" Value="Center"/>
                    </Style>
                </DataGrid.RowStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Row ID" Binding="{Binding ID}" Width="Auto" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Item" Binding="{Binding Item}" Width="Auto" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Lot" Binding="{Binding Lot}"  Width="Auto" IsReadOnly="True"/>
                    <DataGridTextColumn Header="WH" Binding="{Binding WH}" Width="Auto" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Package Type" Binding="{Binding Package_Type}" Width="Auto" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Merge" Binding="{Binding Merge_Status}" Width="Auto" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Pick Location 1" Binding="{Binding PickLocation_One}" Width="200" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Pick Location 2" Binding="{Binding PickLocation_Tow}" Width="200" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Pick Location 3" Binding="{Binding PickLocation_Three}" Width="200" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Classification" Binding="{Binding Classification}" Width="Auto" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*" IsReadOnly="True"/>
                </DataGrid.Columns>
            </DataGrid>
            <Button x:Name="Shortage_Btn" IsEnabled="False" Content="Report Shortage " Visibility="Visible" Width="240"  Margin="100,20,0,0" Height="80" FontSize="26" Background="#FF31577E" BorderBrush="#FF31577E" Click="Shortage_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
