<UserControl x:Class="Sort_And_Scan.Views.Main"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sort_And_Scan.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
            d:DesignHeight="890" d:DesignWidth="{Binding Source={x:Static SystemParameters.PrimaryScreenWidth}}">
    <UserControl.Resources>
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
        <Style TargetType="DataGridCell">
            <Setter Property="TextBlock.TextAlignment" Value="Center" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <StackPanel Orientation="Horizontal">
            <StackPanel>
                <TextBlock x:Name="NumOfComp_Txt" Text="Number Of Component: 100" FontSize="25" Width="400" Margin="100,80,0,0" Foreground="Black"/>
                <TextBlock x:Name="NumOfSkid_Txt" Text="Number Of SKIDs: 100" FontSize="25" Width="400" Margin="100,10,0,0" Foreground="Black"/>
                <TextBlock x:Name="FirstScanned_Txt" Text="First Scanned: 100" FontSize="25" Width="400" Margin="100,100,0,0" Foreground="Black"/>
                <TextBlock x:Name="BackupScanned_Txt" Text="Backup Scanned: 100" FontSize="25" Width="400" Margin="100,10,0,0" Foreground="Black"/>
                <TextBlock x:Name="TotalScanned_Txt" Text="Total Scanned: 100" FontSize="25" Width="400" Margin="100,100,0,0" Foreground="Black"/>
                <Button x:Name="Complete_Btn" Content=" Report Kit&#x0a;Completion" Visibility="Hidden" Width="200" HorizontalAlignment="Left" Margin="100,20,0,0" Height="80" FontSize="26" Background="#FF31577E" BorderBrush="#FF31577E" Click="Completion_Click"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="30,80,0,50">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Insert SKID" FontSize="30" Width="Auto" Margin="170,0,0,0" FontWeight="Bold" VerticalAlignment="Center" Foreground="Black"/>
                    <TextBox x:Name="Lot_Txt" Width="300" Background="White" BorderThickness="1" Margin="10,0,0,0" VerticalAlignment="Center" HorizontalContentAlignment="Center" Text="" FontSize="30" BorderBrush="Black" TextChanged="Lot_Txt_TextChanged"  Foreground="Black"/>
                </StackPanel>
                <StackPanel x:Name="DetailsSP" Orientation="Vertical" Margin="0,20,0,0" >
                    <Border Width="800" Height="80" Background="#FF31577E">
                        <TextBlock x:Name="Lot_Txt2" Text="" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" FontSize="36" FontWeight="Bold"/>
                    </Border>
                    <Border Width="800" Height="420" BorderThickness="1" BorderBrush="#FF31577E">
                        <StackPanel>
                            <Border x:Name="PickLocation_Border" Width="700" Height="120" BorderThickness="1" Margin="0,30,0,0" BorderBrush="#FF31577E">
                                <TextBlock x:Name="PickLocation_Txt" Text="" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Black" FontSize="80" FontWeight="Bold"/>
                            </Border>
                            <Border x:Name="First_Border" Width="700" Height="90"  BorderThickness="1" Margin="0,30,0,0" VerticalAlignment="Top" BorderBrush="#FF31577E">
                                <TextBlock x:Name="First_Txt" Text="" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Black" FontSize="60" FontWeight="Bold"/>
                            </Border>
                            <Border x:Name="AllFirst_Border" Visibility="Hidden" Width="700" Height="90"  BorderThickness="5" Margin="0,30,0,0" VerticalAlignment="Top" BorderBrush="#FFD49231">
                                <TextBlock x:Name="AlFirst_Txt" Text="All First Reels Scanned " VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Black" FontSize="40" FontWeight="Bold"/>
                            </Border>
                        </StackPanel>
                    </Border>
                    <StackPanel Orientation="Horizontal" Margin="0,60,0,0">
                        <StackPanel Margin="150,0,0,0" >
                            <TextBlock Text="Location Info" FontSize="25" Margin="0,0,0,0" Foreground="Black"/>
                            <Button x:Name="LocInfoBtn"  BorderBrush="{x:Null}"  VerticalAlignment="Center" Margin="0,0,0,0" Width="100" Height="100" Click="LocInfoBtn_Click">
                                <Button.Background>
                                    <ImageBrush ImageSource="/Resources/information.png"/>
                                </Button.Background>
                            </Button>
                        </StackPanel>
                        <StackPanel Margin="220,0,0,0" >
                            <TextBlock Text="Set as First" FontSize="25" Margin="0,0,0,0" Foreground="Black"/>
                            <Button x:Name="SetFirstBtn"  BorderBrush="{x:Null}" IsEnabled="False" VerticalAlignment="Center" Margin="0,0,0,0" Width="100" Height="100" Click="SetFirst_Click">
                                <Button.Background>
                                    <ImageBrush ImageSource="/Resources/Button_Icon.png"/>
                                </Button.Background>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
            <StackPanel x:Name="InfoSP" Margin="60,147,0,0" Visibility="Hidden">
                <Border Width="450" Height="50" Background="#FF31577E">
                    <TextBlock x:Name="Item_Txt" Text="" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" FontSize="36" FontWeight="Bold"/>
                </Border>
                <DataGrid x:Name="Grid1" AutoGenerateColumns="False" RowHeight="30" Height="600" Width="450"  CanUserAddRows="False" SelectionUnit="Cell" CanUserReorderColumns="False" FontSize="20" VirtualizingPanel.IsVirtualizing="False" HorizontalGridLinesBrush="Black" VerticalGridLinesBrush="Black" GridLinesVisibility="All" Background="{x:Null}" Foreground="Black" BorderThickness="1" BorderBrush="Black">
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                        </Style>
                    </DataGrid.RowStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Lot" Binding="{Binding Lot}" Width="Auto" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Classification" Binding="{Binding Classification}" Width="Auto" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*" IsReadOnly="True"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
