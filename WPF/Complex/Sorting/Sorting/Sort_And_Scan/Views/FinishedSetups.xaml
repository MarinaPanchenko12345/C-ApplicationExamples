<UserControl x:Class="Sort_And_Scan.Views.FinishedSetups"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sort_And_Scan.Views"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="{Binding Source={x:Static SystemParameters.PrimaryScreenWidth}}">
    <UserControl.Resources>
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
        <Style TargetType="DataGridCell">
            <Setter Property="TextBlock.TextAlignment" Value="Center" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <StackPanel VerticalAlignment="Top" Orientation="Vertical">
            <DataGrid x:Name="Grid1" Margin="0,50,0,0" AutoGenerateColumns="False" RowHeight="30" Height="700" Width="1100"  CanUserAddRows="False" SelectionUnit="Cell" CanUserReorderColumns="False" FontSize="20" VirtualizingPanel.IsVirtualizing="True" HorizontalGridLinesBrush="Black" VerticalGridLinesBrush="Black" GridLinesVisibility="All" Background="{x:Null}" Foreground="Black" BorderThickness="1" BorderBrush="Black" VirtualizingPanel.IsVirtualizingWhenGrouping="True">
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="{Binding RowColor}"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="HorizontalAlignment" Value="Center"/>
                    </Style>
                </DataGrid.RowStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="PL" Binding="{Binding PL}" Width="Auto" IsReadOnly="True"/>
                    <DataGridTextColumn Header="WH" Binding="{Binding WH}" Width="Auto" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Customer" Binding="{Binding Customer}"  Width="Auto" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Line" Binding="{Binding Line}" Width="Auto" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Worker" Binding="{Binding Worker}" Width="Auto" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Total Scanned" Binding="{Binding Total_Scanned}" Width="Auto" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Time" Binding="{Binding Time, StringFormat='dd/MM/yyyy HH:mm'}" Width="*" IsReadOnly="True"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</UserControl>
