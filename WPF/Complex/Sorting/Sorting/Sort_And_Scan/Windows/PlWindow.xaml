<Window x:Class="Sort_And_Scan.Windows.PlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sort_And_Scan.Windows"
        mc:Ignorable="d"
        Title="PlWindow" Height="{Binding Source={x:Static SystemParameters.PrimaryScreenWidth}}" Width="{Binding Source={x:Static SystemParameters.PrimaryScreenWidth}}">

  
    <Window.Resources>
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
        <Style TargetType="DataGridCell">
            <Setter Property="TextBlock.TextAlignment" Value="Center" />
        </Style>
    </Window.Resources>
    <Grid>
        <StackPanel VerticalAlignment="Top" Orientation="Vertical">
            <DataGrid x:Name="Grid1" Margin="0,140,0,0" AutoGenerateColumns="False" RowHeight="30" Height="500" Width="1100"  CanUserAddRows="False" SelectionUnit="Cell" CanUserReorderColumns="False" FontSize="20" VirtualizingPanel.IsVirtualizing="True" HorizontalGridLinesBrush="Black" VerticalGridLinesBrush="Black" GridLinesVisibility="All" Background="{x:Null}" Foreground="Black" BorderThickness="1" BorderBrush="Black" VirtualizingPanel.IsVirtualizingWhenGrouping="True">
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="{Binding RowColor}"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="HorizontalAlignment" Value="Center"/>
                    </Style>
                </DataGrid.RowStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="PL" Binding="{Binding PL}" Width="120" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Customer" Binding="{Binding Customer}" Width="270" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Employee Name" Binding="{Binding Employee_Name}"  Width="220" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Total First" Binding="{Binding Total_First}" Width="130" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Total Backup" Binding="{Binding Total_Backup}" Width="140" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Time" Binding="{Binding Date, StringFormat='dd/MM/yyyy HH:mm'}" Width="*" IsReadOnly="True"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Window>
