<Window x:Class="Sort_And_Scan.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sort_And_Scan"
         xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
       mc:Ignorable="d" Title="Sort And Scan" Foreground="White"  WindowStartupLocation="CenterScreen" WindowState="Maximized" Height="{Binding Source={x:Static SystemParameters.PrimaryScreenHeight}}" Width="{Binding Source={x:Static SystemParameters.PrimaryScreenWidth}}">

    <Viewbox Stretch="Fill" StretchDirection="Both">
        <Grid>
            <StackPanel Orientation="Vertical" >
                <DockPanel Height="50" Background="WhiteSmoke" LastChildFill="False" >
                    <Image Source="Resources/flex2.png"/>
                    <Label Content="Sort &amp; Scan App" VerticalContentAlignment="Center" Foreground="#FFA2A2A2" DockPanel.Dock="Left" FontSize="20" />
                    <Button BorderBrush="{x:Null}" Margin="0,0,15,0" Width="45" Height="45" DockPanel.Dock="Right"  Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Click="Exit_Click">
                        <Button.Background>
                            <ImageBrush ImageSource="/Resources/exit.png"/>
                        </Button.Background>
                    </Button>
                    <Button x:Name="LoginBtn" Content="Login" Background="{x:Null}" Height="40"  Visibility="Visible" DockPanel.Dock="Right" BorderBrush="{x:Null}" Foreground="#FFA2A2A2" FontSize="22" FontWeight="Bold" VerticalAlignment="Center" Click="Login_Click"/>
                    <StackPanel x:Name="User_Details_Panel" Orientation="Horizontal" Visibility="Collapsed" DockPanel.Dock="Right">
                        <Ellipse Width="30" Height="30">
                            <Ellipse.Fill>
                                <ImageBrush x:Name="ProfileImg"/>
                            </Ellipse.Fill>
                        </Ellipse>
                        <TextBlock x:Name="NameTxt" Text="Shahar Assenheim" Foreground="#FFA2A2A2" Margin="10,0,0,0" FontSize="22" VerticalAlignment="Center"/>
                        <Button Content="Logout" Background="{x:Null}" Margin="5,0,0,0"  DockPanel.Dock="Right" BorderBrush="{x:Null}" Foreground="#FFA2A2A2" FontSize="22" Height="40" FontWeight="Bold" VerticalAlignment="Center" Click="Login_Click"/>
                    </StackPanel>
                </DockPanel>
                <StackPanel x:Name="DetailsSP" Visibility="Visible" Orientation="Horizontal" Height="70" Background="WhiteSmoke">
                    <TextBlock Text="Insert PL: " Foreground="#FFA2A2A2" FontSize="24" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    <TextBox x:Name="PLTxt" Width="150" Background="White" Height="50" HorizontalContentAlignment="Center" Margin="5,0,0,0" VerticalContentAlignment="Center" FontSize="20" BorderThickness="1" BorderBrush="#FFA2A2A2" Foreground="Black" KeyDown="PLTxt_KeyDown"/>
                    <Button Background="{x:Null}" Content="Go" BorderBrush="#FFA2A2A2" Click="Go_Click" Foreground="#FFA2A2A2" VerticalAlignment="Center" Margin="5,0,0,0"   DockPanel.Dock="Right"  Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" FontSize="20" FontWeight="Bold"/>
                    <Button ToolTip="Clear" Visibility="Visible"  BorderBrush="{x:Null}" Padding="0" Width="45" Height="45" Margin="10,0,0,0" Click="Clear_Click">
                        <Button.Background>
                            <ImageBrush ImageSource="/Resources/clear.png" Stretch="UniformToFill"/>
                        </Button.Background>
                    </Button>
                    <StackPanel x:Name="PLDetailsGrid" Orientation="Horizontal" Visibility="Hidden">
                        <TextBlock x:Name="CustomerLbl" Text="Customer:" Foreground="#FFA2A2A2" Visibility="Visible" FontSize="24" VerticalAlignment="Center" Margin="30,0,0,0" FontWeight="Bold"/>
                        <TextBlock x:Name="CustomerTxt" Text="" Width="Auto" Visibility="Visible" Foreground="#FFA2A2A2" FontSize="24" VerticalAlignment="Center" Margin="10,0,0,0"/>
                        <TextBlock x:Name="LineLbl" Text="Line:" Foreground="#FFA2A2A2" Visibility="Visible" FontSize="24" VerticalAlignment="Center" Margin="100,0,0,0" FontWeight="Bold"/>
                        <TextBlock x:Name="LineTxt" Visibility="Visible" Text="" Width="Auto" Foreground="#FFA2A2A2" FontSize="24" VerticalAlignment="Center" Margin="10,0,0,0"/>
                        <TextBlock x:Name="WHLbl" Text="WH:" Foreground="#FFA2A2A2" Visibility="Visible" FontSize="24" VerticalAlignment="Center" Margin="100,0,0,0" FontWeight="Bold"/>
                        <TextBlock x:Name="WHTxt" Visibility="Visible" Text="" Width="Auto" Foreground="#FFA2A2A2" FontSize="24" VerticalAlignment="Center" Margin="10,0,0,0"/>
                        <TextBlock x:Name="SetupLbl" Text="Setup:" Foreground="#FFA2A2A2" Visibility="Visible" FontSize="24" VerticalAlignment="Center" Margin="100,0,0,0" FontWeight="Bold"/>
                        <TextBlock x:Name="SetupTxt" Visibility="Visible" Text="" Width="Auto" Foreground="#FFA2A2A2" FontSize="24" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    </StackPanel>
                </StackPanel>
                <Grid Height="70" Background="#C3C7CA">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="10,0,10,0">
                        <StackPanel Orientation="Horizontal" x:Name="Menu" IsEnabled="False">
                            <Button Uid="0" Width="180" Content="Main" Height="50" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FF31577E" FontSize="18" Click="Menu_Click"/>
                            <Button Uid="1" Width="180" Content="Sort &amp; Scan" Height="50" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FF31577E" FontSize="18" Click="Menu_Click"/>
                            <Button Uid="2" Width="180" Content="Unscanned SKIDs" Height="50" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FF31577E" FontSize="18" Click="Menu_Click"/>
                            <Button Uid="3" Width="180" Content="Allocation Check" Height="50" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FF31577E" FontSize="18" Click="Menu_Click"/>
                            <Button Uid="4" Width="180" Content="Attrition Rates" Height="50" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FF31577E" FontSize="18" Click="Menu_Click"/>
                           
                        </StackPanel>
                        <Button x:Name="FinishedBtn" IsEnabled="False" Uid="5" Width="180" Content="Finished Setup's" Height="50" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FF31577E" FontSize="18" Click="Menu_Click"/>
                        <Button x:Name="WhKittingBtn"  Uid="6" Width="180" Content="WH Kitting" Height="50" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FF31577E" FontSize="18" Click="Menu_Click"/>
                       
                    </StackPanel>
                    <Grid x:Name="GridCursor" Width="180" Height="5" Background="#FF31577E" HorizontalAlignment="Left" Margin="10,40,0,0"/>
                </Grid>
                <Grid x:Name="WelcomeGrid"  Height="920" Width="1900" Visibility="Visible">
                    <Label x:Name="WelcomeLbl" Content="Please Login To Start Using The System" HorizontalAlignment="Center" VerticalContentAlignment="Center" Foreground="#FFA2A2A2" DockPanel.Dock="Left" FontSize="36" />
                </Grid>
                <Grid x:Name="ViewProgressBar" Height="920" Width="1900" Visibility="Collapsed">
                    <ProgressBar x:Name="PBar" Visibility="Visible" Margin="0,0,0,0" Style="{StaticResource MaterialDesignCircularProgressBar}" Value="0" IsIndeterminate="True" Height="100" Width="100"/>
                </Grid>
                <Grid x:Name="ViewSP"  Height="920" Visibility="Collapsed" Width="1900"/>
            </StackPanel>
        </Grid>
    </Viewbox>
</Window>
