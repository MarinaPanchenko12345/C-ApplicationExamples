<Window x:Class="Sort_And_Scan.Windows.Select_Iplc"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sort_And_Scan.Windows"
        mc:Ignorable="d"
  xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Select Side" Height="300" Width="500" ResizeMode="NoResize" WindowStyle="None" AllowsTransparency="True" WindowStartupLocation="CenterScreen" Background="White" BorderBrush="#FFA6A3A3" BorderThickness="5" ShowInTaskbar="False">
    <Grid>
        <StackPanel>
            <Label Content="Select Side" HorizontalAlignment="Center" Margin="0,10,0,0" FontSize="30" FontWeight="Bold"/>
            <ComboBox x:Name="CB" BorderThickness="1" Height="50" Width="400" Margin="0,40,0,0" Background="LightGray" FontSize="18" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
            <Button Content="OK" Height="70" FontSize="30" Width="100" Margin="0,30,0,0" Click="OK_Click" Background="#FF31577E" BorderBrush="#FF31577E"/>
        </StackPanel>
    </Grid>
</Window>
