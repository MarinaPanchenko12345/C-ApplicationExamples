<Window x:Class="Sort_And_Scan.Windows.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sort_And_Scan"
        mc:Ignorable="d"
  xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Login" Height="400" Width="600" ResizeMode="NoResize" WindowStyle="None" AllowsTransparency="True" Background="Transparent" WindowStartupLocation="CenterScreen" BorderBrush="#FFA6A3A3" BorderThickness="5" ShowInTaskbar="False">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Light.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.Blue.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Accent/MaterialDesignColor.Indigo.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Rectangle RadiusY="8" RadiusX="8" Fill="White" />
        <Image Source="Resources/smt.jpg" Margin="310,0,0,0" Stretch="UniformToFill"/>
        <Rectangle Margin="310,0,0,0">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#CCF5F9F9" Offset="1"/>
                    <GradientStop Color="#CC9B9FF3"/>
                    <GradientStop Color="#CC6590D1" Offset="0.566"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <StackPanel Margin="20,10,290,10">
            <Label Content="Login" FontFamily="Segoe UI Black" FontSize="24" Margin="0,10" VerticalAlignment="Top" HorizontalAlignment="Left"/>
            <StackPanel Orientation="Vertical">
                <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap" Foreground="#707070"><Run Text="Please Enter Username And Password."/></TextBlock>
                <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,5,0,0" TextWrapping="Wrap" Foreground="#707070"><Run Text="*If You Are Not Registered In The System, Contact Your Personal Manager."/></TextBlock>
            </StackPanel>
            <StackPanel Margin="0,15" Orientation="Horizontal" Height="46">
                <materialDesign:PackIcon Kind="Account" VerticalAlignment="Center" Foreground="#707070"/>
                <TextBox x:Name="textBoxWorkNumber" materialDesign:HintAssist.Hint="Username" Width="250" Margin="5" FontSize="20"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,15" Height="46">
                <materialDesign:PackIcon Kind="Key" VerticalAlignment="Center" Foreground="#707070"/>
                <PasswordBox x:Name="textBoxPassword" materialDesign:HintAssist.Hint="Password" Width="250" KeyDown="OnKeyDownHandler" Margin="5" FontSize="20"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                <Button HorizontalAlignment="Center" Content="OK" Margin="30,0,0,0"  FontFamily="Impact" FontSize="18" Width="100" Background="#FF307CD6" BorderBrush="#FF307CD6"  Click="Button_Click"/>
                <Button HorizontalAlignment="Center" Content="Close"  FontFamily="Impact" FontSize="18" Width="100" Background="#FF307CD6" BorderBrush="#FF307CD6" Margin="20,0,0,0" IsCancel="True"/>
            </StackPanel>

        </StackPanel>
        <StackPanel Margin="310,50,0,50">
            <TextBlock Text="Sort &amp; Scan" Foreground="White" HorizontalAlignment="Center" FontSize="45" FontFamily="Champagne &amp; Limousines" FontWeight="Bold"/>
            <TextBlock Text="Manage Setup Kits For Production" Foreground="White" HorizontalAlignment="Center" Width="280" FontSize="24" FontFamily="Champagne &amp; Limousines" TextWrapping="Wrap" TextAlignment="Center" Margin="0,50,0,0"/>
        </StackPanel>
    </Grid>
</Window>
